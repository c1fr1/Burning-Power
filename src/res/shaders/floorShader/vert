#version 330 core

layout (location = 0) in vec3 vertices;
layout (location = 1) in vec2 textCoords;
layout (location = 2) in vec3 normals;

out vec3 verts;
out vec2 texCoords;
out vec3 norms;

uniform mat4 matrix;

void main() {
	gl_Position = matrix * vec4(vertices, 1);
	verts = vertices;
    texCoords = 500 * textCoords;
    norms = normals;
}